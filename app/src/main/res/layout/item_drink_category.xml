<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_size"
    android:foreground="?selectableItemBackground"
    tools:background="@color/background">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/mini_margin"
        android:fontFamily="@font/manrope_medium"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/eminem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvItemsCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Чёрный кофе" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemsCount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/category_count_height"
        android:background="@drawable/bg_category_count"
        android:gravity="center"
        android:minWidth="@dimen/category_count_height"
        android:paddingStart="@dimen/micro_margin"
        android:paddingEnd="@dimen/micro_margin"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/gray_80"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnProceed"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11" />

    <ImageView
        android:id="@+id/btnProceed"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginEnd="@dimen/default_margin"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/micro_padding"
        android:src="@drawable/ic_small_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gray_80" />

</androidx.constraintlayout.widget.ConstraintLayout>