<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/micro_padding"
    android:paddingBottom="@dimen/micro_padding">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvInstructionIndex"
        android:layout_width="@dimen/instruction_index_size"
        android:layout_height="@dimen/instruction_index_size"
        android:layout_marginStart="@dimen/default_margin"
        android:background="@drawable/bg_instruction_index"
        android:fontFamily="@font/manrope_extrabold"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/eminem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:fontFamily="@font/manrope_medium"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/gray_CF"
        android:textColorLink="@color/eminem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvInstructionIndex"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Смешать крепкий черный кофе и крепко заваренный чай" />
</androidx.constraintlayout.widget.ConstraintLayout>